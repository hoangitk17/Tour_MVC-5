
@{
    ViewBag.Title = "ChiPhiTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Tour_du_lich.Models

    <div class="container-fluid">
        <h1 class="mt-4">Thống Kê Chi Phí Tour</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Home">Màn Hình Chính</a></li>
            <li class="breadcrumb-item active">Thống Kê</li>
            <li class="breadcrumb-item active">Chi Phí Tour</li>
        </ol>
        <div class="card" style="border: 1px solid black;">
            <div class="card-body">
                <div style="margin-left: 20px">
                    <div class="row">
                        <div class="col-md-3">
                            <div>
                                Mã Tour Cần Thống Kê
                            </div>
                            <div>
                                <select id="ma-tour" style="color: black">
                                    @foreach (TourDataModel item in ViewBag.tours)
                                    {
                                        if (ViewBag.matour != null)
                                        {
                                            if (item.matour == ViewBag.matour)
                                            {
                                                <option value="@item.matour" selected>@item.matour</option>
                                            }
                                            else
                                            {
                                                <option value="@item.matour">@item.matour</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="@item.matour">@item.matour</option>
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>
                                Thời gian Bắt Đầu
                            </div>
                            <div>
                                @if (ViewBag.thoigianbatdau != null)
                                {
                                    <input type="date" id="thoi-gian-bat-dau" value="@ViewBag.thoigianbatdau.Date.ToString("yyyy-MM-dd")" />
                                }
                                else
                                {
                                    <input type="date" id="thoi-gian-bat-dau" />
                                }

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>
                                Thời gian kết Thúc
                            </div>
                            <div>
                                @if (ViewBag.thoigianketthuc != null)
                                {
                                    <input type="date" id="thoi-gian-ket-thuc" value="@ViewBag.thoigianketthuc.Date.ToString("yyyy-MM-dd")" />
                                }
                                else
                                {
                                    <input type="date" id="thoi-gian-ket-thuc" />
                                }
                            </div>
                        </div>
                        <div class="col-md-3" style="margin-top: 20px"><button id="btnRun" onclick="ChiPhiTour();">Thực hiện</button></div>
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.ChiPhiTours != null && ViewBag.ChiPhiTours.Count > 0)
        {
            <div class="card-body" style="border: 1px solid black; margin: 20px 0px">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="13%">Mã Tour</th>
                                <th width="13%">Mã Đoàn</th>
                                <th width="15%">Mã Chi Phí</th>
                                <th width="15%">Giá Tour</th>
                                <th width="15%">Ngày Bắt Đầu</th>
                                <th width="15%">Ngày Kết Thúc</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ChiPhiTourModel item in ViewBag.ChiPhiTours)
                            {
                            <tr>
                                <td>@item.matour</td>
                                <td>@item.madoan</td>
                                <td>@item.machiphi</td>
                                <td>@String.Format("{0:0,0 vnđ}", item.gia)</td>
                                <td>@item.ngaybatdau</td>
                                <td>@item.ngayketthuc</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card mb-4" style="border: 1px solid black;">
                <div class="card-body">
                    <div class="row" style="display:flex; justify-content:flex-end; font-size: 24px; font-weight: 500">
                        <div class="col-md-4">Tổng Chi Phí Của Tour @ViewBag.matour:&nbsp;</div>
                        <div class="col-md-8">@String.Format("{0:0,0 vnđ}", ViewBag.total)</div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card-body" style="border: 1px solid black; margin: 20px 0px">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="13%">Mã Tour</th>
                                <th width="13%">Mã Đoàn</th>
                                <th width="15%">Mã Chi Phí</th>
                                <th width="14%">SL Khách</th>
                                <th width="15%">Giá Tour</th>
                                <th width="15%">Ngày Bắt Đầu</th>
                                <th width="15%">Ngày Kết Thúc</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div class="card mb-4" style="border: 1px solid black;">
                <div class="card-body">
                    <div class="row" style="display:flex; justify-content:flex-start; font-size: 22px; font-weight: 500">
                        <div class="col-md-4">Tổng Chi Phí Của Tour:&nbsp;</div>
                        <div class="col-md-8">0 VNĐ</div>
                    </div>
                </div>
            </div>
        }

    </div>





