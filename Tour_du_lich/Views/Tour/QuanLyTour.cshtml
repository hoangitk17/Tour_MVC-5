@{
    ViewBag.Title = "QuanLyTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Tour_du_lich.Models

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Quản Lý Tour</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Home">Màn Hình Chính</a></li>
            <li class="breadcrumb-item active">Quản Lý</li>
            <li class="breadcrumb-item active">Quản Lý Tour</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header" style="display: flex; justify-content: space-between">
                <div>
                    <i class="fas fa-table mr-1"></i>
                    Bảng Thông Tin Tour
                </div>
                <div>
                    <button style="font-size:14px" type="button" class="btn btn-secondary" data-toggle="modal" data-target="#myModalAdd">
                        <a style="color: white; text-decoration: none;" href="#" data-toggle="collapse">
                            Thêm Tour
                            <span class="sb-nav-link-icon"><i class="fa fa-plus-square" style="font-size:14px;color:white"></i></span>
                        </a>
                    </button>

                    <!-- The Modal -->
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <div class="modal fade" id="myModalAdd">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width: 620px">

                                    <!-- Modal Header -->
                                    <div class="modal-header" style="background-color: #343a40; color: white">
                                        <h4 class="modal-title">Thêm Tour</h4>
                                        <button type="button" class="close" data-dismiss="modal" style="color: white">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <div style="margin-left: 50px">
                                            <div style="margin-top:50px" class="row">
                                                <div class="col-md-6">
                                                    <div>
                                                        Mã Tour
                                                    </div>
                                                    <div>
                                                        <input />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div>
                                                        Loại Tour
                                                    </div>
                                                    <div>
                                                        <select id="tours" style="color: black">
                                                            <option value="volvo">Volvo</option>
                                                            <option value="saab">Saab</option>
                                                            <option value="vw">VW</option>
                                                            <option value="audi" selected>Audi</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="margin-top:50px" class="row">
                                                <div class="col-md-6">
                                                    <div>
                                                        Tên Tour
                                                    </div>
                                                    <div>
                                                        <input />
                                                    </div>
                                                </div>
                                            </div>



                                            <div style="margin-top:50px" class="row">
                                                Chọn Địa Điểm
                                            </div>
                                            <div style="margin-top:50px" class="row">
                                                <!-- Demo -->
                                                <div class="col-md-5">
                                                    <select multiple="multiple" size="10" name="duallistbox_demo2" id="demo2" title="duallistbox_demo2">
                                                        <option value="option1" selected="selected">Option 1</option>
                                                        <option value="option2">Option 2</option>
                                                        <option value="option3">Option 3</option>
                                                        <option value="option4">Option 4</option>
                                                        <option value="option5">Option 5</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-2" style="display: flex; flex-direction: column">
                                                    <button type="button" class="btn btn-primary" style="margin-top: 15px">></button>
                                                    <button type="button" class="btn btn-primary" style="margin-top: 15px">>></button>
                                                    <button type="button" class="btn btn-primary" style="margin-top: 15px"><</button>
                                                    <button type="button" class="btn btn-primary" style="margin-top: 15px"><<</button>
                                                </div>
                                                <div class="col-md-5">
                                                    <select multiple="multiple" size="10" name="duallistbox_demo2" id="demo2" title="duallistbox_demo2">
                                                        <option value="option1" selected="selected">Option 1</option>
                                                        <option value="option2">Option 2</option>
                                                        <option value="option3">Option 3</option>
                                                        <option value="option4">Option 4</option>
                                                        <option value="option5">Option 5</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Thêm</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                    <!-- The Modal -->
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <div class="modal fade" id="myModalEdit">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width: 620px">

                                    <!-- Modal Header -->
                                    <div class="modal-header" style="background-color: #343a40; color: white">
                                        <h4 class="modal-title">Sửa Tour</h4>
                                        <button type="button" class="close" data-dismiss="modal" style="color: white">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <div style="margin-left: 50px">
                                            <div style="margin-top:50px" class="row">
                                                <div class="col-md-6">
                                                    <div>
                                                        Mã Tour
                                                    </div>
                                                    <div>
                                                        <input />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div>
                                                        Loại Tour
                                                    </div>
                                                    <div>
                                                        <select id="tours" style="color: black">
                                                            <option value="volvo">Volvo</option>
                                                            <option value="saab">Saab</option>
                                                            <option value="vw">VW</option>
                                                            <option value="audi" selected>Audi</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="margin-top:50px" class="row">
                                                <div class="col-md-6">
                                                    <div>
                                                        Tên Tour
                                                    </div>
                                                    <div>
                                                        <input />
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="margin-top:50px" class="row">
                                                Chọn Địa Điểm
                                            </div>
                                            <div style="margin-top:50px" class="row">
                                                <!-- Demo -->
                                                <div class="col-md-5">
                                                    <select multiple="multiple" size="10" name="duallistbox_demo2" id="demo2" title="duallistbox_demo2">
                                                        <option value="option1" selected="selected">Option 1</option>
                                                        <option value="option2">Option 2</option>
                                                        <option value="option3">Option 3</option>
                                                        <option value="option4">Option 4</option>
                                                        <option value="option5">Option 5</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-2" style="display: flex; flex-direction: column">
                                                    <button type="button" class="btn btn-primary" style="margin-top: 15px">></button>
                                                    <button type="button" class="btn btn-primary" style="margin-top: 15px">>></button>
                                                    <button type="button" class="btn btn-primary" style="margin-top: 15px"><</button>
                                                    <button type="button" class="btn btn-primary" style="margin-top: 15px"><<</button>
                                                </div>
                                                <div class="col-md-5">
                                                    <select multiple="multiple" size="10" name="duallistbox_demo2" id="demo2" title="duallistbox_demo2">
                                                        <option value="option1" selected="selected">Option 1</option>
                                                        <option value="option2">Option 2</option>
                                                        <option value="option3">Option 3</option>
                                                        <option value="option4">Option 4</option>
                                                        <option value="option5">Option 5</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Sửa</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                    <!-- The Modal -->
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <div class="modal fade" id="myModalDelete">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width: 620px">

                                    <!-- Modal Header -->
                                    <div class="modal-header" style="background-color: #343a40; color: white">
                                        <h4 class="modal-title">Xóa Tour</h4>
                                        <button type="button" class="close" data-dismiss="modal" style="color: white">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <div>Bạn có muốn xóa tour du lịch này không?</div>
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Xóa</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="100px">Mã Tour</th>
                                <th width="100px">Tên Tour</th>
                                <th width="130px">Mã Loại Tour</th>
                                <th width="400px">Đặc Điểm</th>
                                <th>Giá</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (TourDataModel item in ViewBag.tours)
                            {
                                <tr>
                                    <td>@item.matour</td>
                                    <td>@item.tentour</td>
                                    <td>@item.maloai</td>
                                    <td>@item.dacdiem</td>
                                    <td>@String.Format("{0:0,0 vnđ}", @item.giamacdinh)</td>
                                    <td>
                                        <button data-toggle="modal" data-target="#myModalEdit" type="button" class="btn btn-warning" data-id="@item.matour"><a style="text-decoration: none; color:#FFFFFF" href="#">Sửa</a></button>
                                        <button data-toggle="modal" data-target="#myModalDelete" type="button" class="btn btn-danger" data-id="@item.matour">
                                            <a style="text-decoration: none; color:#FFFFFF" href="#">Xóa</a>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>






