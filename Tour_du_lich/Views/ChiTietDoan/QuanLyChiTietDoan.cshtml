
@{
    ViewBag.Title = "QuanLyChiTietDoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Tour_du_lich.Models

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Quản Lý Chi Tiết Đoàn</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Home">Màn Hình Chính</a></li>
            <li class="breadcrumb-item active">Quản Lý</li>
            <li class="breadcrumb-item active">Quản Lý Chi Tiết Đoàn</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header" style="display: flex; justify-content: space-between">
                <div>
                    <i class="fas fa-table mr-1"></i>
                    Bảng Thông Tin Chi Tiết Đoàn
                </div>
                <div>
                    @*<button style="font-size:14px" type="button" class="btn custom-btn-primary" data-toggle="modal" data-target="#myModalAdd">
                        <a style="color: white; text-decoration: none;" href="#" data-toggle="collapse">
                            Thêm Chi Tiết Đoàn
                            <span class="sb-nav-link-icon"><i class="fa fa-plus-square" style="font-size:14px;color:white"></i></span>
                        </a>
                    </button>*@

                    <!-- The Modal -->
                    @using (Html.BeginForm("QuanLyChiTietDoan", "ChiTietDoan", FormMethod.Post))
                    {
                        <div class="modal fade" id="myModalAdd">
                            <div class="modal-dialog">
                                <div class="modal-content" style="min-width: 600px">

                                    <!-- Modal Header -->
                                    <div class="modal-header bg-cl-primary">
                                        <h4 class="modal-title" style="flex:1;text-align:center;text-transform:uppercase">Thêm Chi Tiết Đoàn</h4>
                                        <button type="button" class="close" data-dismiss="modal" style="color: white">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <div style="">
                                            <div style="margin-top:50px" class="row">
                                                <div class="col-md-6 select-no-edit">
                                                    <div>
                                                        <label for="them-ma-doan" class="form-label"> Mã Đoàn</label>
                                                    </div>
                                                    <div>
                                                        <select id="them-ma-doan" style="color: black">
                                                            @foreach (DoanModel item in ViewBag.doans)
                                                            {
                                                                <option value="@item.madoan">@item.madoan</option>
                                                            }
                                                        </select>
                                                    </div>

                                                </div>
                                                <div class="col-md-6 select-no-edit">
                                                    <div>
                                                        <label for="them-ma-khach-hang" class="form-label"> Mã Khách Hàng</label>
                                                    </div>
                                                    <div>
                                                        <select id="them-ma-khach-hang" style="color: black">
                                                            @foreach (DiaDiemModel item in ViewBag.diadiems)
                                                            {
                                                                <option value="@item.madiadiem">@item.madiadiem</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="margin-top:50px" class="row">
                                                <div class="col-md-12">
                                                    <div>
                                                        <label for="them-nhiem-vu" class="form-label">Mô Tả</label>
                                                    </div>
                                                    <div>
                                                        <textarea id="them-mo-ta" placeholder="Nhập Mô Tả"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="custom-btn btn-16" data-dismiss="modal">Đóng</button>
                                        <button id="btnAddChiTietDoan" type="button" class="custom-btn btn-12" data-dismiss="modal"><span>Add</span><span>Thêm</span></button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                    <!-- The Modal -->
                    @using (Html.BeginForm("EditChiTietDoan", "ChiTietDoan", FormMethod.Post))
                    {
                        <div class="modal fade" id="myModalEdit">
                            <div class="modal-dialog">
                                <div class="modal-content" style="min-width: 600px">

                                    <!-- Modal Header -->
                                    <div class="modal-header bg-cl-primary">
                                        <h4 class="modal-title" style="flex:1;text-align:center;text-transform:uppercase">Sửa Chi Tiết Đoàn</h4>
                                        <button type="button" class="close" data-dismiss="modal" style="color: white">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <div style="">
                                            <div style="margin-top:50px" class="row">
                                                <div class="col-md-6 select-no-edit">
                                                    <div>
                                                        <label for="sua-ma-tour" class="form-label"> Mã Đoàn</label>
                                                    </div>
                                                    <div>
                                                        <select id="sua-ma-tour" style="color: black">
                                                            @foreach (DoanModel item in ViewBag.doans)
                                                            {
                                                                <option value="@item.madoan">@item.madoan</option>
                                                            }
                                                        </select>
                                                    </div>

                                                </div>
                                                <div class="col-md-6 select-no-edit">
                                                    <div>
                                                        <label for="sua-ma-khach-hang" class="form-label"> Mã Khách Hàng</label>
                                                    </div>
                                                    <div>
                                                        <select id="sua-ma-khach-hang" style="color: black" disabled>
                                                            @foreach (KhachModel item in ViewBag.khachhangs)
                                                            {
                                                                <option value="@item.makh">@item.makh</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="margin-top:50px" class="row">
                                                <div class="col-md-12">
                                                    <div>
                                                        <label for="sua-nhiem-vu" class="form-label">  Mô Tả </label>
                                                    </div>
                                                    <div>
                                                        <textarea id="sua-mo-ta" placeholder="Nhập Mô Tả"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="custom-btn btn-16" data-dismiss="modal">Đóng</button>
                                        <button id="btnEditChiTietDoan" type="button" class="custom-btn btn-12" data-dismiss="modal"><span>Edit</span><span>Sửa</span></button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                    <!-- The Modal -->
                    @using (Html.BeginForm("DeleteChiTietDoan", "ChiTietDoan", FormMethod.Post))
                    {
                        <div class="modal fade" id="myModalDelete">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width: 620px">

                                    <!-- Modal Header -->
                                    <div class="modal-header" style="background-color: #343a40; color: white">
                                        <h4 class="modal-title">Xóa Chi Tiết Đoàn</h4>
                                        <button type="button" class="close" data-dismiss="modal" style="color: white">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <div>Bạn có muốn xóa Chi Tiết Đoàn này không?</div>
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Xóa</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="35%">Mã Đoàn</th>
                                <th width="35%">Mã Khách Hàng</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ChiTietDoanModel item in ViewBag.chitietdoans)
                            {
                                <tr>
                                    <td>@item.madoan</td>
                                    <td>@item.makh</td>
                                    <td>
                                        @*<button data-toggle="modal" data-target="#myModalEdit" type="button" class="btn btn-warning" onclick="onGetInfoChiTietDoan('@item.madoan','@item.makh')">Sửa</button>*@
                                        <button type="button" class="btn btn-danger" onclick="onClickDeleteChiTietDoan('@item.madoan','@item.makh')">
                                            Xóa
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>







